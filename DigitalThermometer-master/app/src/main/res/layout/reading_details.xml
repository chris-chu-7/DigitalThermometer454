<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#FFFBB3">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <ImageView
            android:src="@drawable/time"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            android:background="#FFFBB3"
            android:contentDescription="@string/app_name"
            android:layout_height="@dimen/time_image_height"
            android:layout_width="wrap_content"/>

        <TextView
            android:id="@+id/view_reading_time"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="4dp"
            android:layout_weight="1"
            android:textSize="@dimen/reading_dialog_time_text_size"/>


    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginBottom="12dp"
        android:layout_marginRight="12dp">

        <TextView
            android:id="@+id/view_reading_symptoms"
            android:textSize="@dimen/reading_dialog_symptoms_text_size"
            android:textStyle="bold"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingTop="12dp"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="4dp"
            android:fontFamily="sans-serif" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="@dimen/time_image_height"
            android:scaleType="centerInside"
            android:layout_gravity="right"
            android:background="#FFFBB3"
            android:adjustViewBounds="true"
            android:src="@drawable/symptoms" />

    </LinearLayout>


</LinearLayout>